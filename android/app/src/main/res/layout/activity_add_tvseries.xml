<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.cris.tvseriesapp.AddTVSeries"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:text="Add new book"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/tvseriesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write a TV series name here"
        android:layout_margin="8dp"
        />

    <EditText
        android:id="@+id/tvseriesDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write a TV series description here"
        android:layout_margin="8dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add"
        android:onClick="addTVSeries"/>



</LinearLayout>